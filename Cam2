  <h2>ðŸ“º RECEPTOR</h2>

  <video id="remoteVideo" autoplay playsinline></video><br><br>

  <textarea id="offerInput" rows="6" cols="40" placeholder="Pega la oferta SDP aquÃ­"></textarea><br>
  <button onclick="acceptOffer()">Aceptar oferta</button><br><br>

  <textarea id="answer" rows="6" cols="40" placeholder="Respuesta SDP"></textarea>

  <script>
    let pc;

    async function acceptOffer() {
      pc = new RTCPeerConnection();

      pc.ontrack = event => {
        document.getElementById("remoteVideo").srcObject = event.streams[0];
      };

      const offer = JSON.parse(document.getElementById("offerInput").value);
      await pc.setRemoteDescription(offer);

      const answer = await pc.createAnswer();
      await pc.setLocalDescription(answer);

      document.getElementById("answer").value = JSON.stringify(answer);
    }
  </script>
